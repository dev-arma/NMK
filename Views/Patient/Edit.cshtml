@model NMK.Models.Patient

@{
    ViewData["Title"] = "Uredi podatke pacijenta";
}

<h2 class="text-center my-4">Uredi podatke pacijenta</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label for="NameAndSurname" class="col-sm-2 col-form-label">Ime i prezime:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="NameAndSurname" />
            <span asp-validation-for="NameAndSurname" class="text-danger"></span>
        </div>
    </div>

    

    <div class="form-group row">
        <label for="DateOfBirth" class="col-sm-2 col-form-label">Datum rođenja:</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label for="Gender" class="col-sm-2 col-form-label">Spol:</label>
        <div class="col-sm-10">
            <select class="form-control" id="Gender" name="Gender" required>
                <option value="Male">Muško</option>
                <option value="Female">Žensko</option>
                <option value="Unknown">Nepoznato</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="Address" class="col-sm-2 col-form-label">Adresa:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label for="PhoneNumber" class="col-sm-2 col-form-label">Broj telefona:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Spasi</button>
            <a asp-action="Index" class="btn btn-secondary">Odustani</a>
        </div>
    </div>
</form>
