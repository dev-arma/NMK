@model NMK.Models.Doctor

@{
    ViewData["Title"] = "Uredi podatke liječnika";
}

<h2 class="text-center my-4">Uredi podatke liječnika</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Ime:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    

    <div class="form-group row">
        <label for="Surname" class="col-sm-2 col-form-label">Prezime:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label for="Title" class="col-sm-2 col-form-label">Titula:</label>
        <div class="col-sm-10">
            <select class="form-control" id="Title" name="Title" required>
                <option value="Specijalista">Specijalista</option>
                <option value="Specijalizant">Specijalizant</option>
                <option value="MedTehnicar">Medicinski Tehničar</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="DoctorCode" class="col-sm-2 col-form-label">Šifra:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="DoctorCode" value=@Model.DoctorCode name="DoctorCode" required />
        </div>
    </div>

    


    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Spasi</button>
            <a asp-action="Index" class="btn btn-secondary">Odustani</a>
        </div>
    </div>
</form>
