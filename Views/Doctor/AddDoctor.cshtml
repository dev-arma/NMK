@model Doctor

<h2 class="text-center my-4">Novi liječnik</h2>

<form asp-action="AddDoctor" method="post" class="form-horizontal">
    
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Ime:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>
    </div>

    <div class="form-group row">
        <label for="Surname" class="col-sm-2 col-form-label">Prezime:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Surname" name="Surname" required />
        </div>
    </div>

    <div class="form-group row">
        <label for="Title" class="col-sm-2 col-form-label">Titula:</label>
        <div class="col-sm-10">
            <select class="form-control" id="Title" name="Title" required>
                <option value="Specijalista">Specijalista</option>
                <option value="Specijalizant">Specijalizant</option>
                <option value="Med. Tehnicar">Medicinski Tehničar</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="DoctorCode" class="col-sm-2 col-form-label">Šifra:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="DoctorCode" name="DoctorCode" required />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Dodaj novog liječnika</button>
        </div>
    </div>
</form>
