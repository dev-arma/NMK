@model IEnumerable<Admission>

<h2>Prijemi</h2>


<div class="form-group">
    <label for="DateFrom">Datum od</label>
    <input type="date" id="DateFrom" class="form-control" />
</div>
<div class="form-group">
    <label for="DateTo">Datum do</label>
    <input type="date" id="DateTo" class="form-control" />
</div>
<button type="button" onclick="filterTable()" class="btn btn-primary">Filtriraj</button>


<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Datum i vrijeme prijema</th>
            <th>Pacijent</th>
            <th>Nadležni liječnik</th>
            <th>Hitni prijem</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admission in Model)
        {
            <tr>
                <td>@admission.DateAdmitted.ToString("dd/MM/yyyy HH:mm")</td> 
                <td>@admission.Patient.NameAndSurname</td> 
                <td>dr @admission.Doctor.Surname @admission.Doctor.Name (@admission.Doctor.DoctorCode)</td> 
                <td>@(admission.Emergency ? "Da" : "Ne")</td> 
                <td>
                    <a href="@(Url.Action("Edit", new { id = admission.Id }))" class="btn btn-primary">Uredi</a>
                    <form method="post" action="@(Url.Action("DeleteConfirmed", new { id = admission.Id }))" style="display:inline;" onsubmit="return confirmDelete();">
                        <input type="hidden" name="id" value="@admission.Id" />
                        <button type="submit" class="btn btn-danger">Obriši</button>
                    </form>
                    <a href="@(Url.Action("AddReport", new { id = admission.Id }))" class="btn btn-primary">Dodaj nalaz</a>
                    <a href="@(Url.Action("ViewAdmission", new { id = admission.Id }))" class="btn btn-primary">Pogledaj nalaz</a></td>

            </tr>
        }
    </tbody>
</table>

<a href="/Admission/AddAdmission" class="btn btn-primary">Novi prijem pacijenta</a>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            console.log('Confirm Delete function called'); 
            return confirm('Are you sure you want to delete this patient? This action cannot be undone.');
        }
    </script>
    

}