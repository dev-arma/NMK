@model NMK.Models.Admission

<h2 class="text-center my-4">Detalji Nalaza</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Podaci o pacijentu</h4>
        <p><strong>Ime i prezime:</strong> @Model.Patient.NameAndSurname</p>
        <p><strong>Datum prijema:</strong> @Model.DateAdmitted.ToString("dd/MM/yyyy")</p>
    </div>
    <div class="col-md-6">
        <h4>Podaci o lijeƒçniku</h4>
        <p><strong>Ime i prezime:</strong> @Model.Doctor.Surname, @Model.Doctor.Name</p>
